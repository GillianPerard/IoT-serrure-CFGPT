<style type="text/css">
  body { background-color: #222;  }
  body > .grid {  height: 100%;  }
  .image {  margin-top: -100px;  }
  .column {  max-width: 450px;  }
</style>

<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <img src="/images/logoTest.png" class="image">
      <div class="content">
        CFGPT - Connexion
      </div>
    </h2>
    <form class="ui large form" id="form_connexion" action="/login" method="post">
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <input name="email" placeholder="Adresse e-mail" type="text">
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <input name="password" placeholder="Mot de passe" type="password">
          </div>
        </div>
        <div class="ui fluid large teal submit button">Connexion</div>
      </div>

      <div class="ui error message">
        <ul class="list">
        </ul>
      </div>

    </form>

    <% messagesFlash = req.flash('message'); %>
    <% if (messagesFlash.length > 0) { %>
    <div class="ui message error">
      <% messagesFlash.forEach(function(mess)  { %>
      <%= mess %>
      <% }); %>
    </div>
    <% }%>

    <% validFlash = req.flash('valid'); %>
    <% if (validFlash.length > 0) { %>
    <div class="ui message" style="color:darkseagreen">
      <% validFlash.forEach(function(mess)  { %>
      <%= mess %>
      <% }); %>
    </div>
    <% }%>

    <div class="ui message">
      Vous n'avez pas de compte ? <a class="" href="inscription">Inscrivez-vous !</a>
    </div>

  </div>
</div>

<%- block('localScripts', '<script src="/js/pages/connexion.js"></script>') %>
